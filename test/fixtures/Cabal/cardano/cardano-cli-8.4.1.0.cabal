  hs-source-dirs:       app
  main-is:              cardano-cli.hs
  ghc-options:          -threaded -rtsopts "-with-rtsopts=-T"

  build-depends:        cardano-cli
                      , cardano-crypto-class ^>= 2.1
                      , optparse-applicative-fork
                      , transformers-except

