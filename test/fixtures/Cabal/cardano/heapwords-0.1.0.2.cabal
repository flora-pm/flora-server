cabal-version:       >=1.10

name:                heapwords
version:             0.1.0.2
synopsis:            Heapwords
license:             Apache-2.0
license-files:
  LICENSE
  NOTICE
author:              IOHK
maintainer:          operations@iohk.io
copyright:           IOHK
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  default-language:     Haskell2010
  hs-source-dirs:       src
  ghc-options:
    -Wall
    -Wcompat
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wredundant-constraints
    -Wunused-packages

  exposed-modules:      Cardano.HeapWords
  build-depends:        array
                      , base
                      , bytestring
                      , containers
                      , ghc-prim
                      , text
                      , time
                      , vector


  if impl(ghc < 9.0.0)
    build-depends:
      integer-gmp
