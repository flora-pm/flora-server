cabal-version:   3.0
name:            fingertree-rm
version:         1.0.0.3
synopsis:        Finger-trees with root measures
description:     Finger-trees with root measures.
license:         Apache-2.0
license-files:
  LICENSE
  NOTICE

extra-doc-files:
  CHANGELOG.md
  README.md

copyright:       2022-2024 Input Output Global Inc (IOG).
author:          Joris Dral
maintainer:      operations@iohk.io, Joris Dral (joris@well-typed.com)
category:        Data Structures
build-type:      Simple
tested-with:     GHC ==8.10 || ==9.2 || ==9.4 || ==9.6 || ==9.8 || ==9.10

source-repository head
  type:     git
  location: https://github.com/input-output-hk/anti-diffs
  subdir:   fingertree-rm

source-repository this
  type:     git
  location: https://github.com/input-output-hk/anti-diffs
  subdir:   fingertree-rm
  tag:      fingertree-rm-1.0.0.3

common options
  default-language: Haskell2010
  ghc-options:
    -Wall -Wcompat -Wincomplete-uni-patterns
    -Wincomplete-record-updates -Wpartial-fields -Widentities
    -Wredundant-constraints -Wmissing-export-lists -Wunused-packages
    -Wno-unticked-promoted-constructors

library
  import:          options
  hs-source-dirs:  src
  exposed-modules: Data.FingerTree.RootMeasured.Strict
  build-depends:
    , base                       >=4.9 && <4.21
    , cardano-strict-containers
    , monoid-subclasses
    , nothunks

test-suite test
  import:           options
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  hs-source-dirs:   test
  main-is:          Main.hs
  other-modules:    Test.Data.FingerTree.RootMeasured.Strict
  build-depends:
    , base              >=4.9 && <4.21
    , fingertree-rm
    , tasty
    , tasty-quickcheck

benchmark bench
  import:           options
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  hs-source-dirs:   bench
  main-is:          Main.hs
  other-modules:    Bench.Data.FingerTree.RootMeasured.Strict
  build-depends:
    , base                       >=4.9 && <4.21
    , cardano-strict-containers
    , deepseq
    , fingertree
    , fingertree-rm
    , QuickCheck
    , tasty
    , tasty-bench
    , tasty-quickcheck
