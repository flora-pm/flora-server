cabal-version:      >=1.10
name:               dependent-sum-template
version:            0.1.1.1.0.0.0.1
license:            PublicDomain
maintainer:         Obsidian Systems, LLC <maintainer@obsidian.systems>
author:             James Cook <mokus@deepbondi.net>
stability:          experimental
tested-with:
    ghc ==8.0.2 ghc ==8.2.2 ghc ==8.4.4 ghc ==8.6.5 ghc ==8.8.3
    ghc ==9.0.1

homepage:           https://github.com/obsidiansystems/dependent-sum
synopsis:
    Template Haskell code to generate instances of classes in dependent-sum package

description:
    Template Haskell code to generate instances of classes in dependent-sum package, such as 'GEq' and 'GCompare'.

category:           Unclassified
build-type:         Simple
extra-source-files: ChangeLog.md

source-repository head
    type:     git
    location: https://github.com/obsidiansystems/dependent-sum

library
    exposed-modules:
        Data.GADT.Compare.TH
        Data.GADT.Show.TH

    hs-source-dirs:   src
    other-modules:    Data.Dependent.Sum.TH.Internal
    default-language: Haskell2010
    build-depends:
        base >=3 && <5,
        dependent-sum >=0.4.1,
        template-haskell,
        th-extras >=0.0.0.6,
        th-abstraction >=0.4

    if impl(ghc <7.10)
        buildable: False

test-suite test
    type:             exitcode-stdio-1.0
    main-is:          test.hs
    hs-source-dirs:   test
    default-language: Haskell2010
    build-depends:
        base,
        constraints-extras,
        dependent-sum,
        dependent-sum-template

    if impl(ghc <8.0)
        buildable: False
