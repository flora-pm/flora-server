cabal-version:       >=1.10

name:                strict-containers
version:             0.1.0.0
synopsis:            Various strict container types
license:             Apache-2.0
license-files:
  LICENSE
  NOTICE
author:              IOHK
maintainer:          operations@iohk.io
copyright:           IOHK
build-type:          Simple

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:     Haskell2010
  hs-source-dirs:       src
  ghc-options:
    -Wall
    -Wcompat
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wredundant-constraints
  if (!flag(development))
    ghc-options:
      -Werror
  exposed-modules:      Data.FingerTree.Strict
                        Data.Maybe.Strict
                        Data.Sequence.Strict
                        Data.Unit.Strict
  build-depends:        aeson
                      , base >= 4.14
                      , cardano-binary
                      , cborg
                      , containers
                      , data-default-class
                      , deepseq
                      , fingertree
                      , nothunks
                      , serialise
