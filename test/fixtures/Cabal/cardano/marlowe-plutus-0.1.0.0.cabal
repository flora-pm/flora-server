cabal-version: 3.4
name:          marlowe-plutus
version:       0.1.0.0
license:       Apache-2.0
build-type:    Simple
maintainer:    brian.bush@iohk.io
stability:     experimental
author:        Alexander Nemish
synopsis:      Marlowe plutus validators
category:      Language
license-files:
  LICENSE
  NOTICE

data-files:
  benchmarks/rolepayout/*.benchmark
  benchmarks/semantics/*.benchmark
  reference/data/*.contract
  reference/data/*.paths

source-repository head
  type:     git
  location: https://github.com/input-output-hk/marlowe-cardano

flag defer-plugin-errors
  description:
    Defer errors from the plugin, useful for things like Haddock that can't handle it.

  default:     False
  manual:      True

flag trace-plutus
  description: Enable Plutus trace log for Marlowe validators.
  default:     False
  manual:      True

common lang
  default-language:   Haskell2010
  default-extensions:
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    ExplicitForAll
    ScopedTypeVariables
    StandaloneDeriving

  ghc-options:
    -Wall -Wnoncanonical-monad-instances -Wincomplete-uni-patterns
    -Wincomplete-record-updates -Wredundant-constraints -Widentities
    -Wunused-packages -Werror

library
  import:          lang
  hs-source-dirs:  src
  build-depends:
    , base >=4.9 && <5
    , bytestring >=0.10.12 && <0.12
    , cardano-crypto-class
    , flat
    , lens
    , marlowe-cardano ==0.1.2.0
    , plutus-core
    , plutus-ledger-api ==1.0.0.1
    , plutus-tx ==1.0.0.0
    , plutus-tx-plugin ==1.0.0.0
    , serialise ^>=0.2.6

  exposed-modules: Language.Marlowe.Plutus

  if flag(trace-plutus)
    cpp-options: -DTRACE_PLUTUS

executable marlowe-validators
  import:         lang
  hs-source-dirs: app
  main-is:        Main.hs
  other-modules:
    Benchmark.Marlowe
    Benchmark.Marlowe.RolePayout
    Benchmark.Marlowe.Semantics
    Benchmark.Marlowe.Types
    Benchmark.Marlowe.Util
    Paths_marlowe_plutus

  build-depends:
    , base
    , base16-bytestring
    , bytestring
    , cardano-binary
    , containers
    , directory
    , filepath
    , marlowe-cardano
    , marlowe-plutus
    , mtl
    , plutus-core
    , plutus-ledger-api
    , plutus-tx
    , serialise
    , text

  ghc-options:    -threaded

test-suite marlowe-plutus
  import:             lang
  hs-source-dirs:     test
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  other-modules:
    Language.Marlowe.PlutusSpec
    Paths_marlowe_plutus

  build-depends:
    , aeson
    , base
    , bytestring
    , cardano-api
    , containers
    , directory
    , filepath
    , hspec
    , lens
    , marlowe-cardano
    , marlowe-plutus
    , marlowe-test ^>=0.1
    , plutus-ledger-api
    , plutus-tx
    , QuickCheck
    , serialise
    , transformers

  build-tool-depends: hspec-discover:hspec-discover
  ghc-options:        -threaded
